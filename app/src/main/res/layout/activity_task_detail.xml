<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TaskDetail">


    <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/imgTask"
            android:layout_width="300dp"
            android:layout_height="300sp"
            app:layout_constraintTop_toBottomOf="@+id/titleDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginTop="36dp" />

    <TextView

            android:textSize="26sp"
            android:textColor="?colorOnSecondary"
            android:gravity="center"
            android:text="@string/titleDetail"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:id="@+id/titleDetail" />

    <TextView
            android:id="@+id/descDetail"
            android:overScrollMode="ifContentScrolls"
            android:textSize="20sp"
            android:textColor="?colorOnSecondary"
            android:gravity="center"
            android:text="@string/descDetail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTask"
            android:layout_marginTop="20dp" />

    <TextView
            android:visibility="gone"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/urlText"
            app:layout_constraintTop_toBottomOf="@+id/titleDetail"
            app:layout_constraintBottom_toTopOf="@+id/descDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>